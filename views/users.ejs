<% include header.ejs %>
       <div class="jumbotron" id="jumbo">
        <div class="container">
            <h2>Benutzerverwaltung </h2>
        </div>
    </div>
    <div class="container">
    <a href="/users/add" class="btn btn-default" data-toggle="modal"><span class="glyphicon glyphicon-plus"></span> Neuer Benutzer</a>
    <hr>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Benutzername</th>
                <th>Rolle</th>
                <th>E-Mail</th>
                <th>Aktion</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0 ; i < users.length; i++) {%>
            <tr>
                <td><%= users[i].firstName %></td>
                <td><%= users[i].lastName %></td>
                <td><%= users[i].username %></td>
                <td><%= users[i].role %></td>
                <td><%= users[i].email %></td>
                <td>
                    <a href="users/edit/<%= users[i]._id%>">Bearbeiten</a>
                    <a href="#<%= users[i]._id%>_delete" data-toggle="modal"> Löschen</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <% for(var i=0 ; i < users.length; i++) {%>
    <div class="modal fade" id="<%= users[i]._id%>_delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-trash"></span> Möchten Sie diesen Benutzer entfernen?</h4>
                            </div>
                            <div class="modal-body">
                                <p><b>Benutzername: </b>
                                    <%=users[i].username%>
                                </p>
                                <p><b>Voller Name: </b>
                                    </br>
                                    <%=users[i].firstName%> <%=users[i].lastName%>
                                </p>
                            </div>
                            <div class="modal-footer">
                                <form action="/users/delete/<%=users[i]._id%>" method="post">
                                    <button type="button" class="btn btn-default" data-dismiss="modal" id="button">Abbrechen</button>
                                    <button type="submit" class="btn btn-danger">Entfernen</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ////UEBUNG Delete MODAL==== -->
    <% } %>
    
    

    <script type="text/javascript" src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="/javascript/bootstrap.js"></script>
    </div>
    </body>


    </html>